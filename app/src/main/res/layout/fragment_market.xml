<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.market.MarketFragment">

    <Button
        android:id="@+id/buttonApple"
        android:layout_width="110dp"
        android:layout_height="168dp"
        android:layout_marginTop="15dp"
        android:text="@string/apple"
        app:cornerRadius="25dp"
        app:icon="@drawable/apple"
        app:iconGravity="textTop"
        app:iconPadding="20dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonTesla"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <Button
        android:id="@+id/buttonTesla"
        android:layout_width="110dp"
        android:layout_height="168dp"
        android:text="@string/tesla"
        app:cornerRadius="25dp"
        app:icon="@drawable/tesla"
        app:iconGravity="textTop"
        app:iconPadding="20dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonMicrosoft"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonApple"
        app:layout_constraintTop_toTopOf="@+id/buttonApple" />

    <Button
        android:id="@+id/buttonMicrosoft"
        android:layout_width="110dp"
        android:layout_height="168dp"
        android:text="@string/microsoft"
        android:textSize="12sp"
        app:cornerRadius="25dp"
        app:icon="@drawable/windows"
        app:iconGravity="textTop"
        app:iconPadding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonTesla"
        app:layout_constraintTop_toTopOf="@+id/buttonTesla" />

    <TextView
        android:id="@+id/textMarketCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cash" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/stocks"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMarketCash" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/shop"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonApple" />

    <ListView
        android:id="@+id/listShop"
        android:layout_width="380dp"
        android:layout_height="248dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />
</androidx.constraintlayout.widget.ConstraintLayout>